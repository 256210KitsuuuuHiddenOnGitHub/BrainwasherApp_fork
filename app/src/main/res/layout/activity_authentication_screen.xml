<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="#FFDEB9"
    tools:context=".AuthenticationScreen">
<!--This is for the Logo Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/user"
            android:backgroundTint="#7149C6"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
<!--    This is for Greetings-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="90dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="50dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wazzup Brainwasher"/>
    </LinearLayout>
<!--    Input text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="320dp">
        <EditText
            android:id="@+id/LogUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="fakeFriend0999"
            android:drawablePadding="10dp"
            android:drawableTint="#7149C6"
            android:drawableLeft="@drawable/userbox"

            />

        <EditText
            android:id="@+id/LogPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:drawableTint="#7149C6"
            android:inputType="numberPassword"
            android:hint="*************"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:id="@+id/ForgotPass"
            android:layout_marginTop="10dp"
         />
    </LinearLayout>


<!--    This is for Login Button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#7149C6"
            android:text="Sign in"
            android:id="@+id/SignInBtn"
            android:textSize="25dp"
            app:cornerRadius="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't have Account?"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:id="@+id/Register"
            android:clickable="true"
            android:textColor="#7149C6"
            android:textAlignment="center"
           android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue as a Guest"
            android:id="@+id/Guest"
            android:clickable="true"
            android:textColor="#7149C6"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


</RelativeLayout>